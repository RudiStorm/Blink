{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plugin Manifest",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "entry": { "type": "string" },
    "type": { "type": "string", "enum": ["dll", "js", "json"] }
  },
  "required": ["id", "name", "version", "entry", "type"],
  "additionalProperties": false
}